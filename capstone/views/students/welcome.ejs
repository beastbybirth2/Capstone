<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard</title>
    <link rel="stylesheet" href="/css/tailwind.css">
    <link rel="stylesheet" href="/css/navbar.css">
</head>
<body class="bg-gray-100">
    <div class="nav bg-blue-500 p-4 text-white">
        <h1 class="text-2xl font-bold">Student Dashboard</h1>
    </div>

    <div class="container mx-auto mt-8 p-4 flex justify-center items-center">
        <div class="grid grid-cols-2 gap-4">
            <!-- Card for Game -->
            <a href="/students/game" class="bg-white border border-gray-300 rounded-lg p-4 shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1 hover:border-blue-500">
                <h2 class="text-xl font-semibold mb-2">Game</h2>
                <p class="text-gray-600">Play our exciting game and have fun!</p>
            </a>

            <!-- Card for Quiz -->
            <a href="/students/quiz" class="bg-white border border-gray-300 rounded-lg p-4 shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1 hover:border-blue-500">
                <h2 class="text-xl font-semibold mb-2">Quiz</h2>
                <p class="text-gray-600">Test your knowledge with our quizzes.</p>
            </a>

            <!-- Card for Chat -->
            <a href="/students/chat" class="bg-white border border-gray-300 rounded-lg p-4 shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1 hover:border-blue-500">
                <h2 class="text-xl font-semibold mb-2">Chat</h2>
                <p class="text-gray-600">Connect with others in our chat room.</p>
            </a>

            <!-- Card for Send Request -->
            <a href="/students/sendRequest" class="bg-white border border-gray-300 rounded-lg p-4 shadow-md hover:shadow-lg transition-transform transform hover:-translate-y-1 hover:border-blue-500">
                <h2 class="text-xl font-semibold mb-2">Send Request</h2>
                <p class="text-gray-600">Send requests and connect with others.</p>
            </a>
        </div>
    </div>

    <script src="/js/navbar.js"></script>
</body>
</html>
